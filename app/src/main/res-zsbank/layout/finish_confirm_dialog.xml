<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_268"
    android:layout_height="@dimen/dp_164"
    android:layout_gravity="center"
    android:background="@drawable/bg_login_success">


    <TextView
        android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/prompt_title"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/alert_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/finish_inv_confirm"
        android:textSize="@dimen/sp_14" />

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/alert_context"
        android:background="@color/login_line_color"
        android:layout_marginTop="@dimen/dp_35"
        />
    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_login_success"
        android:gravity="center"
        android:text="@string/sure_opt"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>