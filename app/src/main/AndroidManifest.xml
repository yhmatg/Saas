<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.common.esimrfid">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".app.EsimAndroidApp"
        android:allowBackup="true"
        android:icon="@mipmap/esim_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/esim_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ui.login.LoginActivity"></activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.invorder.InvOrderActicity"></activity>
        <activity
            android:name=".ui.invdetail.InvdetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.cardsearch.ScanRfidActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.cardsearch.PhotoViewActivity"></activity>
        <activity
            android:name=".ui.writeepc.WriteEpcActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.requisition.RequisitionActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.requisition.RequisitionDetailActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>