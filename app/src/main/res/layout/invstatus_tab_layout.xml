<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/title_tab"
    android:layout_height="@dimen/dp_40"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/asset_status_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/asset_not_inved"
            android:text="@string/asset_not_inventoried"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/btn_title_bg_selector"
            android:textSize="@dimen/sp_15"
            android:textColor="#1A1A1A"/>
        <RadioButton
            android:id="@+id/asset_inved"
            android:text="@string/ast_inved"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/btn_title_bg_selector"
            android:textSize="@dimen/sp_15"/>
        <RadioButton
            android:id="@+id/asset_inv_more"
            android:text="@string/inv_more_str"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/btn_title_bg_selector"
            android:textSize="@dimen/sp_15"/>
        <RadioButton
            android:id="@+id/asset_inv_less"
            android:text="@string/inv_less_str"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/btn_title_bg_selector"
            android:textSize="@dimen/sp_15"/>
    </RadioGroup>
</LinearLayout>
