<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_5"
    android:padding="@dimen/dp_10">

    <TextView
        android:padding="@dimen/dp_2"
        android:id="@+id/ast_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="@color/white"
        android:background="#1F85E0"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/ast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/ast_status"
        android:text="资产名称"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:visibility="gone"
        android:id="@+id/ast_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:text="删除" />

    <TextView
        android:layout_marginEnd="@dimen/dp_10"
        android:id="@+id/tv_ast_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ast_status"
        android:text="资产编号:"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ast_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ast_status"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="资产编号" />

    <TextView
        android:id="@+id/tv_ast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_number"
        android:text="资产分类:"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_number"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="分类" />

    <TextView
        android:id="@+id/tv_ast_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_type"
        android:text="品牌:"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ast_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_type"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="品牌" />

    <TextView
        android:id="@+id/tv_ast_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_brand"
        android:text="规格型号:"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ast_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_brand"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="型号" />

    <CheckBox
        android:visibility="gone"
        android:id="@+id/cb_repair"
        style="@style/CustomCheckboxTheme"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/tv_ast_number"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:focusable="false" />

</RelativeLayout>