<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/warranty_code"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/handle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/handler"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/repair_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handle_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/repairer"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/cost_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repair_person_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/repair_cost"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/repair_date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cost_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/warranty_date"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/finish_date_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repair_date_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/finish_date"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/explain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finish_date_name"
        android:text="@string/repair_remark"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_code"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/code_name"
        android:layout_alignBottom="@+id/code_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_code"
        android:layout_alignTop="@+id/handle_name"
        android:layout_alignBottom="@+id/handle_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/repair_name"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignTop="@+id/repair_person_name"
        android:layout_alignBottom="@+id/repair_person_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repair_name"
        android:layout_alignTop="@+id/cost_name"
        android:layout_alignBottom="@+id/cost_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_mainten_date"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cost"
        android:layout_alignTop="@+id/repair_date_name"
        android:layout_alignBottom="@+id/repair_date_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_finish_date"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mainten_date"
        android:layout_alignTop="@+id/finish_date_name"
        android:layout_alignBottom="@+id/finish_date_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_mainten_explain"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/code_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/explain_name"
        android:layout_alignBottom="@+id/explain_name"
        android:layout_below="@+id/tv_finish_date"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/repair_status_bg"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:text="@string/finish_start_str"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
