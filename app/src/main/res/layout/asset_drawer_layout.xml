<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_293"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/base_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:text="@string/base_info"
        android:textColor="@color/home_text_one"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/base_info"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_asset_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_one"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/assets_status"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_ast_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_status_arrow"
            android:gravity="end"
            android:hint="@string/asset_status_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_status_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_asset_status"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_use_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_two"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/inv_usecom"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_usecom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_usecom_arrow"
            android:gravity="end"
            android:hint="@string/inv_usecom_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_usecom_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_use_company"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_use_depart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_three"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/inv_usedepart"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_usedepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_usedepart_arrow"
            android:gravity="end"
            android:hint="@string/inv_usedepart_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_usedepart_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_four"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_use_depart"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_ast_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_four"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/inv_asstype"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_asstype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_asstype_arrow"
            android:gravity="end"
            android:hint="@string/inv_asstype_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_asstype_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_five"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_ast_type"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_store_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_five"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/inv_location"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_loc_arrow"
            android:gravity="end"
            android:hint="@string/inv_loc_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_loc_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_six"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_store_location"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_six"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/manager"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_manager_arrow"
            android:gravity="end"
            android:hint="@string/manager_hing"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_manager_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_seven"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_manager"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <LinearLayout
        android:id="@+id/rl_asset_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_seven"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/ast_user_str"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/tv_asset_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/ast_user_hint"
            android:textColor="@color/setting_text_one"
            android:textColorHint="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/drawer_sure_shape"
        android:text="@string/sure_opt"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_30"
        android:layout_alignTop="@+id/bt_sure"
        android:layout_alignBottom="@+id/bt_sure"
        android:layout_toStartOf="@+id/bt_sure"
        android:background="@drawable/drawer_reset_shape"
        android:text="@string/reset_str"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>