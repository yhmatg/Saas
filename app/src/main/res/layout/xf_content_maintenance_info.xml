<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maintenance_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_15"
    android:visibility="gone">
    <TextView
        android:id="@+id/tv_num_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="设备编号"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_asset_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name1"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_device_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name1"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="设备名称"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_device_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name1"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_ast_loc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_device_title1"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/store_loc"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_ast_loc_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_device_title1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name1"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_use_depart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc1"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="所属公司"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_depart_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name1"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
