<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="@string/power_setting"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/home_text_one"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"/>

    <include layout="@layout/seekbar_progress"/>

    <LinearLayout
        android:id="@+id/sound_setting1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/home_text_one"
            android:text="@string/sound_setting"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_15"/>

        <ImageView
            android:id="@+id/sound_set"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/img_open" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sound_setting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="@string/sound_setting"
            android:textColor="@color/home_text_one"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:text="@string/sled"
                android:textColor="@color/home_text_one"
                android:textSize="@dimen/sp_14"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/sled_set"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/img_open"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:text="@string/host"
                android:textColor="@color/home_text_one"
                android:textSize="@dimen/sp_14"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/host_set"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:padding="@dimen/dp_10"
                android:src="@drawable/img_open"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
