<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_4">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_1"
        android:text="@string/select_count"
        android:textColor="@color/home_text_two"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_13" />

    <ImageButton
        android:id="@+id/ast_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:background="#00000000"
        android:src="@drawable/delete_rubbish" />

    <TextView
        android:id="@+id/ast_status"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_17"
        android:layout_below="@+id/tv_position"
        android:background="@color/repair_way"
        android:gravity="center"
        android:text="状态"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/ast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ast_status"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/ast_status"
        android:text="设备名称"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ast_status"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="设备编号"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/ast_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ast_status"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="设备编号"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_number"
        android:text="存放位置"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/ast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_number"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="存放位置"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_type"
        android:text="所属公司"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/ast_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_type"
        android:layout_toEndOf="@+id/tv_ast_number"
        android:text="所属公司"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <CheckBox
        android:id="@+id/cb_repair"
        style="@style/CustomRepairCheckboxTheme"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/tv_ast_number"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout>