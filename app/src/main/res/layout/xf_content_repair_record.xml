<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_repair_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_xj_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="巡检人员"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_person_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_xj_person"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_xj_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xj_person"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="巡检日期"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xj_person"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_xj_date"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_xj_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xj_date"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="巡检结果"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xj_date"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_xj_result"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
