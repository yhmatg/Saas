<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="@dimen/DIMEN_0DP"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/DIMEN_5DP"
            android:id="@+id/typeImg"
            android:layout_gravity="top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:text="资产编号：无信息"
            android:id="@+id/tv_inv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#19a1e7"
            android:textSize="16sp"/>
        <TextView
            android:text="科室：无信息"
            android:id="@+id/tv_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="资产名称：无信息"
            android:id="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="使用人：无信息"
            android:layout_marginTop="7dp"
            android:id="@+id/tv_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="位置：无信息"
            android:layout_marginTop="7dp"
            android:id="@+id/tv_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="仓库：无信息"
            android:layout_marginTop="7dp"
            android:id="@+id/tv_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="盘点类型：无信息"
            android:layout_marginTop="7dp"
            android:id="@+id/tv_inv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme"
            android:textSize="16sp"/>

        <TextView
            android:visibility="gone"
            android:text="型号：无信息"
            android:id="@+id/tv_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/theme"
            android:textSize="16sp"/>
        <TextView
            android:visibility="gone"
            android:text="备注：无信息"
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#efa506"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="无信息"
            android:textColor="@color/un_checked"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_collapse"
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5DP"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_down"/>
    </LinearLayout>

</LinearLayout>