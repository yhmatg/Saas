<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/distribute_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distribute_title"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/distribute_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/distribute_code"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/distribute_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distribute_code"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/inv_creator"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/dist_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/create_date"
        android:layout_alignTop="@+id/distribute_creator"
        android:layout_toEndOf="@+id/distribute_creator"
        android:text="周世文"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/inv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distribute_creator"
        android:text="@string/inv_create_date"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inv_create_date"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/inv_create_date"
        android:text="2021-05-14"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/distribute_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_date"
        android:text="@string/distribute_num_str"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/distribute_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/distribute_num_title"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/inv_create_date"
        android:text="100"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />


    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/distribute_num_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/login_line_color" />

    <Button
        android:id="@+id/bt_reject"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/divider_two"
        android:background="@drawable/bt_background"
        android:text="驳回"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="visible" />


    <Button
        android:id="@+id/bt_start_dist"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/divider_two"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bt_background"
        android:text="开始派发"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="visible" />
</RelativeLayout>