<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_268"
    android:layout_height="@dimen/dp_164">
    <RelativeLayout
        android:layout_width="@dimen/dp_268"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_finish_inv">
        <TextView
            android:id="@+id/change_url_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/access_address"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/edit_url"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_below="@+id/change_url_title"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@null"
            android:gravity="center"
            android:textColor="#ff1a1a1a"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/edit_url"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/horizontal_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel_opt"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/login_line_color" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/home_number"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
