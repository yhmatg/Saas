<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_165"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_finish_inv"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/access_address"
            android:textColor="#1A1A1A"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/edit_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="http://172.16.63.36:12000"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:textColor="#ff1a1a1a"
            android:background="@null"
            android:textSize="12sp"
            android:inputType="textNoSuggestions"
            />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/cancel_opt"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_width="1dp"
                android:background="#DDDDDD"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/enabled_color1"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
