<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assets_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_15"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_ast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="工具名称"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_num_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="设备编号"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_asset_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_ast_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/store_loc"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_ast_loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_use_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="所属公司"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_depart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_14" />

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_depart_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/login_line_color" />

    <TextView
        android:id="@+id/tv_xj_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:text="巡检内容"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_xj_title"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/tv_unnormal"
        android:text="正常"
        android:textColor="@color/home_text_two" />

    <TextView
        android:id="@+id/tv_unnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_xj_title"
        android:layout_alignParentEnd="true"
        android:text="异常"
        android:textColor="@color/home_text_two" />

    <TextView
        android:id="@+id/tv_zhijia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xj_title"
        android:padding="@dimen/dp_10"
        android:text="支架"
        android:textSize="@dimen/sp_14" />

    <RadioGroup
        android:id="@+id/zhijia_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_zhijia"
        android:layout_alignBottom="@+id/tv_zhijia"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_normal1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/xf_radio_one"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_unNormal1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_4"
            android:background="@drawable/xf_radio_two"
            android:button="@null" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_yali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zhijia"
        android:padding="@dimen/dp_10"
        android:text="压力"
        android:textSize="@dimen/sp_14" />

    <RadioGroup
        android:id="@+id/yali_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_yali"
        android:layout_alignBottom="@+id/tv_yali"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_normal2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/xf_radio_one"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_unNormal2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/xf_radio_two"
            android:layout_marginEnd="@dimen/dp_4"
            android:button="@null" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_qianfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_yali"
        android:padding="@dimen/dp_10"
        android:text="铅封"
        android:textSize="@dimen/sp_14" />

    <RadioGroup
        android:id="@+id/qianfen_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_qianfen"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/tv_qianfen"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_normal3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/xf_radio_one"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_unNormal3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/xf_radio_two"
            android:layout_marginEnd="@dimen/dp_4"
            android:button="@null" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_qingjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qianfen"
        android:padding="@dimen/dp_10"
        android:text="清洁"
        android:textSize="@dimen/sp_14" />

    <RadioGroup
        android:id="@+id/qinjie_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_qingjie"
        android:layout_alignBottom="@+id/tv_qingjie"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_normal4"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/xf_radio_one"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_unNormal4"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/xf_radio_two"
            android:layout_marginEnd="@dimen/dp_4"
            android:button="@null" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_qingjie"
        android:padding="@dimen/dp_10"
        android:text="有效期"
        android:textSize="@dimen/sp_14" />

    <RadioGroup
        android:id="@+id/time_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_date"
        android:layout_alignBottom="@+id/tv_date"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_normal5"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/xf_radio_one"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_unNormal5"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/xf_radio_two"
            android:layout_marginEnd="@dimen/dp_4"
            android:button="@null" />
    </RadioGroup>

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/login_line_color" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="@dimen/dp_10"
        android:text="结果描述"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_16" />

    <EditText
        android:id="@+id/ev_repair_direc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@null"
        android:hint="请输入结果备注"
        android:textColor="@color/setting_text_one"
        android:textColorHint="@color/setting_text_one"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_repair"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/xf_drawer_sure_shape"
        android:text="报修"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/xf_drawer_sure_shape"
        android:textSize="@dimen/sp_20"
        android:text="提交"
        android:textColor="@color/white" />

</RelativeLayout>
