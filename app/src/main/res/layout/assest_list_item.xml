<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/inv_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:paddingLeft="@dimen/DIMEN_25DP"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:text="单名：无信息"
                android:id="@+id/tv_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
            <TextView
                android:text="单号：无信息"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_order_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
            <TextView
                android:text="创建人：无信息"
                android:id="@+id/tv_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
            <TextView
                android:text="盘点人：无信息"
                android:id="@+id/tv_assigner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>

            <TextView
                android:text="备注：无信息"
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>

            <TextView
                android:visibility="gone"
                android:text="结束备注：无信息"
                android:id="@+id/tv_finish_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>

            <TextView
                android:text="创建时间：无信息"
                android:id="@+id/tv_cred_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
            <TextView
                android:visibility="gone"
                android:text="结束时间：无信息"
                android:id="@+id/tv_finish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
            <TextView
                android:text="截止时间：无信息"
                android:id="@+id/tv_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/theme"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="@dimen/DIMEN_15DP"
                android:id="@+id/opt_status"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/scanning_but_not_submit"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textColor="@color/processing"
                android:textSize="18sp"
                android:text="无信息"
                android:layout_marginRight="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>