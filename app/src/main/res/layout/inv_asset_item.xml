<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/sp_12">

    <View
        android:id="@+id/head_rec"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/search_background" />

    <TextView
        android:id="@+id/tv_ast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/assets_name"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_num_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/assets_id"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_asset_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/store_loc"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_use_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/inv_usedepart"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_depart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_use_depart"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/user"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_use_depart"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/inv_status_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_add_tag"
        android:padding="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:background="@drawable/add_tag_white_shape"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/titele_color"
        android:layout_alignParentEnd="true"
        android:text="@string/add_tag" />
</RelativeLayout>