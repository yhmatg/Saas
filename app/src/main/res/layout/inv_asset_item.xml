<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <View
        android:id="@+id/head_rec"
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/samll_rectangle" />

    <TextView
        android:id="@+id/tv_ast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@+id/head_rec"
        android:text="@string/assets_name"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_num_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/assets_id"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_asset_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/store_loc"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_use_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/inv_usedepart"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_depart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_use_depart"
        android:text="@string/user"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_use_depart"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/inv_status_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/add_tag_white_shape"
        android:padding="@dimen/dp_5"
        android:text="@string/add_tag"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_tag_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_ast_name"
        android:layout_alignBottom="@+id/tv_ast_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_ast_name"
        android:background="@drawable/add_tag_white_shape"
        android:paddingStart="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_2"
        android:text="@string/add_tag"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_12"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_tag_lose"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/tv_user"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_samll_corner_bg"
        android:text="标为盘空"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_tag_confirm"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_35"
        android:layout_alignTop="@+id/bt_tag_lose"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bt_samll_corner_bg"
        android:text="确认盘点"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>