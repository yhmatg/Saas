<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12">

    <TextView
        android:id="@+id/invtask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2"
        android:text="盘点单名称"
        android:textColor="@color/theme"
        android:textSize="@dimen/sp_14" />

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/invtask_title"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/inv_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="创建人"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_creator"
        android:text="管理员"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:text="创建日期"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_create_date"
        android:text="2019-11-28"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_toStartOf="@+id/expect_finish_date"
        android:text="预计完成日期"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/expect_finish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_5"
        android:text="2019-11-28"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/inv_create_date"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/inv_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:text="盘点总数"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_create_date"
        android:text="11"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待盘点"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/unfinished_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="9"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_toStartOf="@+id/inv_finished_num"
        android:text="已盘点"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_finished_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="2"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <Button
        android:visibility="gone"
        android:id="@+id/bt_start_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="开始盘点"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <Button
        android:visibility="gone"
        android:id="@+id/bt_sync_data"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="同步数据"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <Button
        android:visibility="gone"
        android:id="@+id/bt_finish_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="完成盘点"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>