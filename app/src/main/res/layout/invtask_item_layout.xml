<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12">

    <TextView
        android:id="@+id/invtask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2"
        android:text="@string/invorder_name"
        android:textColor="@color/search_background"
        android:textSize="@dimen/sp_15"/>

    <TextView
        android:id="@+id/invtask_code"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2"
        android:text="@string/invorder_code"
        android:layout_marginEnd="@dimen/dp_10"
        android:textColor="@color/search_background"
        android:textSize="@dimen/sp_15"/>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/invtask_title"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/inv_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="@string/inv_creator"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_creator"
        android:text="@string/no_info"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:text="@string/inv_create_date"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_create_date"
        android:text="@string/no_info"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_toStartOf="@+id/expect_finish_date"
        android:text="@string/inv_expect_finish_date"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/expect_finish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_5"
        android:text="@string/no_info"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/inv_create_date"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/inv_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:text="@string/inv_all_num"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/inv_all_name"
        android:text="@string/no_info"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asset_not_inventoried"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/unfinished_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/no_info"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_toStartOf="@+id/inv_finished_num"
        android:text="@string/asset_inventoried"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/inv_finished_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/no_info"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13" />

    <Button
        android:id="@+id/bt_start_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="@string/start_inv"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_sync_data"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="@string/sync_data"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_finish_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/inv_finished_num"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background"
        android:text="@string/finish_inv"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />
</RelativeLayout>