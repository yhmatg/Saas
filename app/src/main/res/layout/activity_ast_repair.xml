<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:id="@+id/rl_repair_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xing_tag_str"
            android:textColor="#ffff0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_tag1"
            android:gravity="center_vertical"
            android:text="@string/repair_person"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_repair_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_person_arrow"
            android:gravity="end"
            android:hint="@string/repair_person_hint"
            android:textColorHint="@color/gray_text"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_person_arrow"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rl_repair_person"
        android:background="#F2F2F2" />

    <LinearLayout
        android:id="@+id/ll_repair_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_one"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="@string/repair_cost_str"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/ev_repair_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@null"
            android:gravity="end"
            android:text="@string/repair_cost_hint"
            android:textColorHint="@color/gray_text"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/ll_repair_cost"
        android:background="#F2F2F2" />


    <RelativeLayout
        android:id="@+id/rl_repair_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="@string/repair_date"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_repair_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_date_arrow"
            android:gravity="end"
            android:textColorHint="@color/gray_text"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_date_arrow"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rl_repair_date"
        android:background="#F2F2F2" />

    <RelativeLayout
        android:id="@+id/ll_repair_direction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_below="@+id/divider_three"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#ffff0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_repair_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_tag2"
            android:gravity="center_vertical"
            android:text="@string/repair_direction"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/ev_repair_direc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_repair_dir"
            android:layout_alignStart="@+id/tv_repair_dir"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@null"
            android:hint="@string/repair_direc_hint"
            android:textColorHint="@color/gray_text"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_below="@+id/ll_repair_direction"
        android:background="#F2F2F2" />

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_repair_direction"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_scan_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/scan_add"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#F2F2F2" />

        <TextView
            android:id="@+id/tv_choose_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/choose_add"
            android:textColor="@color/repair_text"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:id="@+id/divider_five"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/ll_choose"
        android:background="#F2F2F2" />

    <TextView
        android:id="@+id/tv_select_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_five"
        android:padding="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:text="@string/select_count"
        android:textColor="@color/repair_text"
        android:textSize="@dimen/sp_15" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_selected_ast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_submit"
        android:layout_below="@+id/tv_select_count"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bt_background"
        android:text="@string/submit_data"
        android:textColor="@color/white" />

</RelativeLayout>