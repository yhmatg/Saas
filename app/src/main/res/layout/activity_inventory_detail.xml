<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:id="@+id/invtask_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/invorder_name"
            android:textColor="@color/search_background"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/inv_all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invtask_title"
            android:text="@string/inv_all_num"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/inv_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inv_all_name"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/inv_all_name"
            android:text="@string/no_info"
            android:textColor="@color/search_background"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inv_all_name"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asset_not_inventoried"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/unfinished_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/no_info"
                android:textColor="@color/search_background"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invtask_title"
            android:layout_toStartOf="@+id/inv_finished_num"
            android:text="@string/not_submit"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/inv_finished_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/no_info"
            android:textColor="@color/search_background"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/inv_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inv_all_name"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/inv_create_date"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inv_all_name"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/inv_create_date"
            android:text="@string/no_info"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inv_all_name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toStartOf="@+id/expect_finish_date"
            android:text="@string/inv_expect_finish_date"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/expect_finish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inv_all_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/no_info"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_layout"
        android:layout_above="@+id/bt_start_inv">

        <include layout="@layout/empty_page"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_inventory_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_start_inv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bt_background"
        android:text="@string/start_inv"
        android:textColor="@color/white" />
</RelativeLayout>