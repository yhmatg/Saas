<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_search"
        style="@style/fb_common_style"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/DIMEN_250DP"
        android:layout_marginRight="30dp"
        android:src="@drawable/icon_search"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="#4aaff2"
        app:fabSize="mini"
        app:rippleColor="#ec8eae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#7D62B3E3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_crop"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="公司"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首页"
                android:textColor="#ffffff"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtHomeOut"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="南华大学附属第一医院"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="资产管理应用"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHomeAssetsScan"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/main_icon_bg"
                    android:paddingLeft="30dp"
                    android:paddingTop="17dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/icon_inv" />

                <ImageView
                    android:id="@+id/imgHomeAssetsSearch"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/main_icon_bg"
                    android:paddingLeft="30dp"
                    android:paddingTop="17dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/icon_inv_search" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_write_epc"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/main_icon_bg"
                    android:paddingLeft="30dp"
                    android:paddingTop="17dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/icon_inv_write" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
