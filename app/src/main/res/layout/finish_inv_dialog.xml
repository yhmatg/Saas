<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_268"
        android:layout_height="@dimen/dp_164"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_finish_inv"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/prompt_title"
            android:textColor="#1A1A1A"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/finish_prop_content"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/cancel_opt"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_width="1dp"
                android:background="#DDDDDD"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure_opt"
                android:textColor="@color/enabled_color1"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
