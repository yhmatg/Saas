<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/ll_inv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center"
        android:layout_below="@+id/title_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_26">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/new_inv_name"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/ev_inv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/inv_name_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/ll_inv_name"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_assign_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_one"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/new_inv_persion"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_person_arrow"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:hint="@string/inv_persion_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_person_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/rl_assign_name"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_expect_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center"
        android:layout_below="@+id/divider_two"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/exp_finish_date"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_expfin_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_date_arrow"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:hint="@string/inv_finish_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_date_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@+id/rl_expect_date"
        android:background="@color/bgcolor" />

    <LinearLayout
        android:id="@+id/ll_inv_range"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center"
        android:layout_below="@+id/divider_three"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <View
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/samll_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/new_inv_info"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/home_text_one"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:text="@string/inv_remind_hint"
            android:textColor="@color/home_number"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

    <View
        android:id="@+id/divider_four"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/ll_inv_range"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_use_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center"
        android:layout_below="@+id/divider_four"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/inv_usecom"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_usecom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_usecom_arrow"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:hint="@string/inv_usecom_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_usecom_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_five"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/rl_use_company"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_use_depart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_five"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/inv_usedepart"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_usedepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_usedepart_arrow"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:hint="@string/inv_usedepart_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_usedepart_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_six"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/rl_use_depart"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:id="@+id/rl_ast_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@+id/divider_six"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/inv_asstype"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_asstype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_asstype_arrow"
            android:gravity="end"
            android:hint="@string/inv_asstype_hint"
            android:layout_centerVertical="true"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_asstype_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_seven"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_below="@+id/rl_ast_type"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:layout_below="@+id/divider_seven"
        android:id="@+id/rl_store_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/inv_location"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_loc_arrow"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:hint="@string/inv_loc_hint"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_loc_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_eight"
        android:layout_below="@+id/rl_store_location"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <RelativeLayout
        android:layout_below="@+id/divider_eight"
        android:id="@+id/rl_own_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/inv_owncom"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_inv_owncom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_toStartOf="@+id/iv_owncom_arrow"
            android:gravity="end"
            android:hint="@string/inv_own_comp_hint"
            android:layout_centerVertical="true"
            android:textColorHint="@color/setting_text_one"
            android:textColor="@color/setting_text_one"
            android:textSize="@dimen/sp_13"  />

        <ImageView
            android:id="@+id/iv_owncom_arrow"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_own_company"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bt_background"
        android:text="@string/new_inv_submit"
        android:textColor="@color/white" />

</RelativeLayout>