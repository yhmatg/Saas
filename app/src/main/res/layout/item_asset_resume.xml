<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/handle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/handle_method"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/handle_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handle_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/handler"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/handle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handle_person"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/handle_date"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/handle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/handle_time"
        android:text="@string/handle_content"
        android:textColor="@color/home_text_one"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_method"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_alignTop="@+id/handle_name"
        android:layout_alignBottom="@+id/handle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/handle_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_alignTop="@+id/handle_person"
        android:layout_alignBottom="@+id/handle_person"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_method"
        android:layout_toEndOf="@+id/handle_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_alignTop="@+id/handle_time"
        android:layout_alignBottom="@+id/handle_time"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/handle_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_alignTop="@+id/handle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_toEndOf="@+id/handle_name"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>
