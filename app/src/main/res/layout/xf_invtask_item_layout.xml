<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/invtask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invorder_name"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/invtask_code"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invorder_code"
        android:textColor="@color/titele_color"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/inv_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invtask_code"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="巡  检  人"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/inv_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invtask_code"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignStart="@+id/create_date"
        android:layout_toEndOf="@+id/inv_creator"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/inv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:text="巡检日期"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_creator"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/inv_create_date"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_create_date"
        android:text="巡检时间"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/expect_finish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_create_date"
        android:layout_toEndOf="@+id/tv_text"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_text"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/login_line_color" />

    <TextView
        android:id="@+id/inv_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:text="巡检位置"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/inv_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/inv_all_name"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已巡位置"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/unfinished_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/home_text_two"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_toStartOf="@+id/inv_finished_num"
        android:text="未检位置"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/inv_finished_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_two"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_14" />

    <View
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/inv_all_name"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/login_line_color" />

    <Button
        android:id="@+id/bt_start_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/divider_three"
        android:background="@drawable/bt_background"
        android:text="开始巡检"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_sync_data"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/divider_three"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bt_background"
        android:text="数据上传"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_finish_inv"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/divider_three"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bt_background"
        android:text="结束任务"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:visibility="gone" />
</RelativeLayout>