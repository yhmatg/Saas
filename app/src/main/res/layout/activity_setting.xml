<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:orientation="vertical"
        android:background="@drawable/home_item_background"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:src="@drawable/setting_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:text="@string/corporation_name"
            android:layout_marginTop="@dimen/dp_5"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/home_item_background">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/img_edition"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_handheld_machine"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_name"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_num"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/home_item_background">

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/img_function"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/function_setting"
            android:textSize="@dimen/sp_15"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_5"/>

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_7"
            android:layout_gravity="center"
            android:src="@drawable/img_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_loginout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/home_item_background"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:text="@string/login_out"
            android:textSize="@dimen/sp_15"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
