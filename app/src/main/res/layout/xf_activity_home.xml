<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/welcom_user"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_11"
        android:background="@drawable/home_background_shadow"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tv_task_title"
            android:textSize="@dimen/sp_17"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/inspection_str" />


        <LinearLayout
            android:id="@+id/ll_need_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_title"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/home_number"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未巡检"
                android:textColor="@color/home_text_one"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_need_task"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inuse_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/home_number"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已逾期"
                android:textColor="@color/home_text_one"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll_need_task"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/free_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/home_number"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经完成"
                android:textColor="@color/home_text_one"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/home_background_shadow"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="常用功能"
            android:textColor="@color/home_text_one"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inv_task"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_plan"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="巡检计划"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ast_inv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_type"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="巡检类型"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ast_search"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_content"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="巡检内容"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/write_tag"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_content"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="巡检点"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ast_identity"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_repair"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="设备报修"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ast_repair"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_scan"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/ast_list"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/xf_setting"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/asset_inventory"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/ast_inv"
                android:textColor="@color/home_text_two"
                android:textSize="@dimen/sp_15"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>